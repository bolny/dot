# -*- mode: ruby -*-
# vi: ft=ruby

tap "homebrew/bundle"
tap "homebrew/cask"
tap "homebrew/core"
tap "homebrew/cask-drivers"
tap "homebrew/cask-fonts"
tap "railwaycat/emacsmacport"

# Terminal Utilities
brew "tmux"
brew "nq"
brew "entr"
brew "ffmpeg"
