cask "digikam"

# Ebook Stuff
cask "calibre"

# Developer Stuff
brew "shellcheck"
brew "checkmake"
brew "cmake"
brew "universal-ctags"
brew "clang-format"
cask "docker"
cask "font-iosevka"
cask "font-iosevka-aile"
cask "font-iosevka-etoile"
cask "iterm2"
cask "godot"
cask "vagrant"

######################
